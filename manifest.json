{
  "manifest_version": 3,
  "name": "Drink water Extension",
  "version": "1.0.0",
  "description": "Tracker d'hydratation",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "drink.png"
  }
}
